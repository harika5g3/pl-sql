

TAKING INPUT FROM USER::

SET SERVEROUTPUT ON
DECLARE
a number(30):= &a;
BEGIN
    IF(a=10) THEN
        dbms_output.put_line('The given number is matched '||a);
    ELSIF(a<20) THEN 
        dbms_output.put_line('The given number is less than 10');
    ELSE
        dbms_output.put_line('The given number is greater then 10');
    END IF;
END;

TAKING INPUT IN PROGRAM::
SET SERVEROUTPUT ON
DECLARE
a number(3):= 30;
BEGIN
    IF(a=10) THEN
        dbms_output.put_line('The given number is matched '||a);
    ELSIF(a<30) THEN 
        dbms_output.put_line('The given number is less than 30');
    ELSE
        dbms_output.put_line('The given number is greater then 30');
    END IF;
END;
